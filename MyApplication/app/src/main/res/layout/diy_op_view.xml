<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/mRlOut"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/mLeftTop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/mTop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/mRightTop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/mCenterLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/mCenterRight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mBottonLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/mbotton_center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/mbotton_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ball"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/bingjiling"
        android:layout_centerInParent="true"/>
</RelativeLayout>